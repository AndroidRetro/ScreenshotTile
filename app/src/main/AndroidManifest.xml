<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.github.ipcjs.screenshottile"
          xmlns:android="http://schemas.android.com/apk/res/android">
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Transparent">
        <activity
            android:name=".NoDisplayActivity"
            android:theme="@android:style/Theme.NoDisplay"/>
        <activity
            android:name=".DelayScreenshotActivity"
            android:excludeFromRecents="true"/>
        <activity
            android:name=".dialog.TransparentContainerActivity"
            android:excludeFromRecents="true"/>
        <activity
            android:name=".dialog.ContainerActivity"
            android:launchMode="singleTask"
            android:taskAffinity="${applicationId}.task"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SettingDialogActivity" android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES"/>
            </intent-filter>
        </activity>
        <activity android:name=".AcquireScreenshotPermission"
            android:excludeFromRecents="true"/>
        <activity android:name=".TakeScreenshotActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:excludeFromRecents="true" />
        <service
            android:name=".ScreenshotTileService"
            android:icon="@drawable/ic_stat_name"
            android:label="@string/tile_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>
    </application>

</manifest>